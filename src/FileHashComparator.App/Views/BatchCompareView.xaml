<UserControl x:Class="FileHashComparator.App.Views.BatchCompareView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
             mc:Ignorable="d"
             d:DesignHeight="600"
             d:DesignWidth="900">
    <UserControl.Resources>
        <BooleanToVisibilityConverter x:Key="BoolToVisibility" />
    </UserControl.Resources>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <ui:Card Grid.Row="0" Margin="0,0,0,12">
            <StackPanel Margin="12">
                <StackPanel Orientation="Horizontal" Margin="0,0,0,10">
                    <TextBlock Text="{DynamicResource LabelMode}" VerticalAlignment="Center" Margin="0,0,8,0" />
                    <ComboBox Width="220"
                              ItemsSource="{Binding Modes}"
                              SelectedItem="{Binding SelectedMode}"
                              DisplayMemberPath="DisplayName" />
                    <TextBlock Text="{DynamicResource LabelAlgorithm}" VerticalAlignment="Center" Margin="16,0,8,0" />
                    <ComboBox Width="220"
                              ItemsSource="{Binding Algorithms}"
                              SelectedItem="{Binding SelectedAlgorithm}"
                              DisplayMemberPath="DisplayName" />
                </StackPanel>

                <StackPanel Visibility="{Binding IsListVsFolderMode, Converter={StaticResource BoolToVisibility}}">
                    <TextBlock Text="{DynamicResource LabelHashList}" />
                    <DockPanel Margin="0,4,0,8">
                        <ui:TextBox x:Name="ListFileTextBox"
                                    Text="{Binding ListFilePath}"
                                    IsReadOnly="True"
                                    Margin="0,0,8,0"
                                    AllowDrop="True"
                                    PreviewDragOver="OnPreviewDragOver"
                                    Drop="OnListFileDrop" />
                        <ui:Button Content="{DynamicResource ButtonBrowse}"
                                   Command="{Binding BrowseListFileCommand}"
                                   Width="110"
                                   DockPanel.Dock="Right" />
                    </DockPanel>

                    <TextBlock Text="{DynamicResource LabelRootFolder}" />
                    <DockPanel Margin="0,4,0,0">
                        <ui:TextBox x:Name="FolderTextBox"
                                    Text="{Binding FolderPath}"
                                    IsReadOnly="True"
                                    Margin="0,0,8,0"
                                    AllowDrop="True"
                                    PreviewDragOver="OnPreviewDragOver"
                                    Drop="OnFolderDrop" />
                        <ui:Button Content="{DynamicResource ButtonBrowse}"
                                   Command="{Binding BrowseFolderCommand}"
                                   Width="110"
                                   DockPanel.Dock="Right" />
                    </DockPanel>
                </StackPanel>

                <StackPanel Visibility="{Binding IsListVsListMode, Converter={StaticResource BoolToVisibility}}">
                    <TextBlock Text="{DynamicResource LabelHashListA}" />
                    <DockPanel Margin="0,4,0,8">
                        <ui:TextBox x:Name="ListFileATextBox"
                                    Text="{Binding ListFilePath}"
                                    IsReadOnly="True"
                                    Margin="0,0,8,0"
                                    AllowDrop="True"
                                    PreviewDragOver="OnPreviewDragOver"
                                    Drop="OnListFileDrop" />
                        <ui:Button Content="{DynamicResource ButtonBrowse}"
                                   Command="{Binding BrowseListFileCommand}"
                                   Width="110"
                                   DockPanel.Dock="Right" />
                    </DockPanel>

                    <TextBlock Text="{DynamicResource LabelHashListB}" />
                    <DockPanel Margin="0,4,0,0">
                        <ui:TextBox x:Name="ListFileBTextBox"
                                    Text="{Binding ListFilePathB}"
                                    IsReadOnly="True"
                                    Margin="0,0,8,0"
                                    AllowDrop="True"
                                    PreviewDragOver="OnPreviewDragOver"
                                    Drop="OnListFileBDrop" />
                        <ui:Button Content="{DynamicResource ButtonBrowse}"
                                   Command="{Binding BrowseListFileBCommand}"
                                   Width="110"
                                   DockPanel.Dock="Right" />
                    </DockPanel>
                </StackPanel>

                <StackPanel Orientation="Horizontal" Margin="0,12,0,0">
                    <ui:Button Content="{DynamicResource ButtonCompare}"
                               Command="{Binding CompareCommand}"
                               IsEnabled="{Binding CanCompare}"
                               Width="120"
                               Margin="0,0,8,0" />
                    <ui:Button Content="{DynamicResource ButtonCancel}"
                               Command="{Binding CancelCommand}"
                               IsEnabled="{Binding IsBusy}"
                               Width="120"
                               Margin="0,0,8,0" />
                    <ui:Button Content="{DynamicResource ButtonClear}"
                               Command="{Binding ClearCommand}"
                               Width="120" />
                    <ProgressBar IsIndeterminate="True"
                                 Visibility="{Binding IsBusy, Converter={StaticResource BoolToVisibility}}"
                                 Height="6"
                                 Margin="16,6,0,0"
                                 VerticalAlignment="Center" />
                </StackPanel>
            </StackPanel>
        </ui:Card>

        <ui:Card Grid.Row="1">
            <Grid Margin="12">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="*" />
                </Grid.RowDefinitions>
                <StackPanel>
                    <TextBlock Text="{DynamicResource LabelResults}" FontWeight="SemiBold" />
                    <TextBlock Text="{Binding StatusMessage}" Margin="0,4,0,0" />
                </StackPanel>
                <DataGrid Grid.Row="1"
                          ItemsSource="{Binding Results}"
                          AutoGenerateColumns="False"
                          IsReadOnly="True"
                          Margin="0,8,0,0">
                    <DataGrid.Columns>
                        <DataGridTextColumn Header="{DynamicResource ColumnPath}" Binding="{Binding Path}" Width="*" />
                        <DataGridTextColumn Header="{DynamicResource ColumnExpectedHash}" Binding="{Binding ExpectedHash}" Width="2*" />
                        <DataGridTextColumn Header="{DynamicResource ColumnActualHash}" Binding="{Binding ActualHash}" Width="2*" />
                        <DataGridTextColumn Header="{DynamicResource ColumnStatus}" Binding="{Binding StatusText}" Width="1.2*" />
                    </DataGrid.Columns>
                </DataGrid>
            </Grid>
        </ui:Card>
    </Grid>
</UserControl>
